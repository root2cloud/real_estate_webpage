<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="agent_portal_profile" name="Agent Profile">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <div class="container mt-4 mb-5">
                <h2 class="mb-4">
                    <i class="fa fa-user"/> My Profile
                </h2>

                <div class="row">
                    <!-- Profile Card -->
                    <div class="col-lg-4 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <img t-if="agent.image"
                                     t-att-src="image_data_uri(agent.image)"
                                     class="rounded-circle mb-3 border border-3 border-primary"
                                     style="width: 150px; height: 150px; object-fit: cover;"/>
                                <img t-else=""
                                     src="/web/static/img/placeholder.png"
                                     class="rounded-circle mb-3"
                                     style="width: 150px;"/>

                                <h3 class="mb-1"><t t-esc="agent.name"/></h3>
                                <p class="text-muted mb-3">
                                    <span class="badge bg-primary">
                                        <t t-esc="dict(agent._fields['designation'].selection)[agent.designation]"/>
                                    </span>
                                    <t t-if="agent.expertise_level == 'luxury'">
                                        <span class="badge bg-warning text-dark">
                                            <i class="fa fa-star"/> Luxury Expert
                                        </span>
                                    </t>
                                </p>

                                <div class="d-grid gap-2">
                                    <a href="/my/agent/dashboard" class="btn btn-outline-primary">
                                        <i class="fa fa-dashboard"/> Back to Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="card shadow-sm border-0 mt-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fa fa-address-card"/> Contact Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong class="text-muted">Email:</strong>
                                    <p class="mb-0"><t t-esc="agent.email"/></p>
                                </div>
                                <div class="mb-3">
                                    <strong class="text-muted">Phone:</strong>
                                    <p class="mb-0"><t t-esc="agent.phone"/></p>
                                </div>
                                <div class="mb-3" t-if="agent.whatsapp">
                                    <strong class="text-muted">WhatsApp:</strong>
                                    <p class="mb-0"><t t-esc="agent.whatsapp"/></p>
                                </div>
                                <div class="mb-0">
                                    <strong class="text-muted">City:</strong>
                                    <p class="mb-0"><t t-esc="agent.city"/>, <t t-esc="agent.state_id.name or ''"/></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Details Section -->
                    <div class="col-lg-8">
                        <!-- About Me -->
                        <div class="card shadow-sm border-0 mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fa fa-info-circle"/> About Me
                                </h5>
                            </div>
                            <div class="card-body">
                                <p t-if="agent.short_bio" class="lead">
                                    <t t-esc="agent.short_bio"/>
                                </p>
                                <div t-if="agent.detailed_bio" t-field="agent.detailed_bio" class="mt-3"/>

                                <div class="row mt-4">
                                    <div class="col-md-6" t-if="agent.experience_years">
                                        <strong class="text-muted">Experience:</strong>
                                        <p><t t-esc="agent.experience_years"/> years</p>
                                    </div>
                                    <div class="col-md-6" t-if="agent.languages_spoken">
                                        <strong class="text-muted">Languages:</strong>
                                        <p><t t-esc="agent.languages_spoken"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Performance Stats -->
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="fa fa-bar-chart"/> Performance Statistics
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-md-4 mb-3">
                                        <div class="p-3 bg-primary bg-opacity-10 rounded">
                                            <h3 class="text-primary mb-1">
                                                <t t-esc="agent.active_property_count"/>
                                            </h3>
                                            <p class="text-muted mb-0">Active Listings</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="p-3 bg-success bg-opacity-10 rounded">
                                            <h3 class="text-success mb-1">
                                                <t t-esc="agent.total_deals"/>
                                            </h3>
                                            <p class="text-muted mb-0">Total Deals</p>
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <div class="p-3 bg-warning bg-opacity-10 rounded">
                                            <h3 class="text-warning mb-1">
                                                <t t-esc="'%.1f' % agent.avg_rating"/>
                                                <i class="fa fa-star"/>
                                            </h3>
                                            <p class="text-muted mb-0">Average Rating</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
