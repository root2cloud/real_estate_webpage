<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="agent_portal_dashboard" name="Agent Dashboard">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <div class="container mt-4 mb-5">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="mb-0">
                            <i class="fa fa-dashboard text-primary"/>
                            Agent Dashboard
                        </h2>
                        <p class="text-muted">Welcome back,
                            <strong>
                                <t t-esc="agent.name"/>
                            </strong>
                            !
                        </p>
                    </div>
                </div>

                <div class="row">
                    <!-- Sidebar -->
                    <div class="col-lg-3 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <!-- Profile Photo -->
                                <img t-if="agent.image"
                                     t-att-src="image_data_uri(agent.image)"
                                     class="rounded-circle mb-3 border border-primary"
                                     style="width: 120px; height: 120px; object-fit: cover;"/>
                                <img t-else=""
                                     src="/web/static/img/placeholder.png"
                                     class="rounded-circle mb-3"
                                     style="width: 120px;"/>

                                <h5 class="mb-1">
                                    <t t-esc="agent.name"/>
                                </h5>
                                <p class="text-muted small mb-3">
                                    <span class="badge bg-primary">
                                        <t t-esc="dict(agent._fields['designation'].selection)[agent.designation]"/>
                                    </span>
                                </p>

                                <!-- Navigation Menu -->
                                <div class="list-group list-group-flush">
                                    <a href="/my/agent/dashboard" class="list-group-item list-group-item-action active">
                                        <i class="fa fa-dashboard"/>
                                        Dashboard
                                    </a>
                                    <a href="/my/agent/profile" class="list-group-item list-group-item-action">
                                        <i class="fa fa-user"/>
                                        My Profile
                                    </a>
                                    <a href="/my/agent/properties" class="list-group-item list-group-item-action">
                                        <i class="fa fa-home"/>
                                        My Properties
                                    </a>
                                    <a href="/my/agent/property/add"
                                       class="list-group-item list-group-item-action text-success">
                                        <i class="fa fa-plus-circle"/>
                                        Add Property
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Card -->
                        <div class="card shadow-sm border-0 mt-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="fa fa-info-circle"/>
                                    Quick Info
                                </h6>
                            </div>
                            <div class="card-body small">
                                <p class="mb-2">
                                    <i class="fa fa-envelope text-primary"/>
                                    <t t-esc="agent.email"/>
                                </p>
                                <p class="mb-2">
                                    <i class="fa fa-phone text-success"/>
                                    <t t-esc="agent.phone"/>
                                </p>
                                <p class="mb-0">
                                    <i class="fa fa-map-marker text-danger"/>
                                    <t t-esc="agent.city"/>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="col-lg-9">
                        <!-- Statistics Cards -->
                        <div class="row mb-4">
                            <div class="col-md-3 mb-3">
                                <div class="card bg-gradient-primary text-white shadow-sm border-0 h-100">
                                    <div class="card-body text-center">
                                        <i class="fa fa-home fa-2x mb-2 opacity-75"/>
                                        <h2 class="mb-0 fw-bold">
                                            <t t-esc="stats['total_properties']"/>
                                        </h2>
                                        <p class="mb-0 small">Total Properties</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card bg-gradient-success text-white shadow-sm border-0 h-100">
                                    <div class="card-body text-center">
                                        <i class="fa fa-check-circle fa-2x mb-2 opacity-75"/>
                                        <h2 class="mb-0 fw-bold">
                                            <t t-esc="stats['published']"/>
                                        </h2>
                                        <p class="mb-0 small">Published</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card bg-gradient-warning text-white shadow-sm border-0 h-100">
                                    <div class="card-body text-center">
                                        <i class="fa fa-clock-o fa-2x mb-2 opacity-75"/>
                                        <h2 class="mb-0 fw-bold">
                                            <t t-esc="stats['pending']"/>
                                        </h2>
                                        <p class="mb-0 small">Pending Approval</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="card bg-gradient-info text-white shadow-sm border-0 h-100">
                                    <div class="card-body text-center">
                                        <i class="fa fa-eye fa-2x mb-2 opacity-75"/>
                                        <h2 class="mb-0 fw-bold">
                                            <t t-esc="stats['total_views']"/>
                                        </h2>
                                        <p class="mb-0 small">Total Views</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Properties -->
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fa fa-list"/>
                                    Recent Properties
                                </h5>
                                <a href="/my/agent/property/add" class="btn btn-sm btn-success">
                                    <i class="fa fa-plus"/>
                                    Add New Property
                                </a>
                            </div>
                            <div class="card-body">
                                <div t-if="not properties" class="alert alert-info mb-0">
                                    <i class="fa fa-info-circle"/>
                                    You haven't added any properties yet.
                                    <a href="/my/agent/property/add" class="alert-link">Add your first property</a>
                                </div>

                                <div t-if="properties" class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Property</th>
                                                <th>Location</th>
                                                <th>Price</th>
                                                <th>Status</th>
                                                <th>Views</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="properties" t-as="prop">
                                                <tr>
                                                    <td>
                                                        <strong>
                                                            <t t-esc="prop.name"/>
                                                        </strong>
                                                    </td>
                                                    <td>
                                                        <i class="fa fa-map-marker text-danger"/>
                                                        <t t-esc="prop.city"/>
                                                    </td>
                                                    <td class="text-primary fw-bold">
                                                        â‚¹
                                                        <t t-esc="'{:,.0f}'.format(prop.price)"/>
                                                    </td>
                                                    <td>
                                                        <span t-if="prop.is_published" class="badge bg-success">
                                                            <i class="fa fa-check"/>
                                                            Published
                                                        </span>
                                                        <span t-else="" class="badge bg-warning text-dark">
                                                            <i class="fa fa-clock-o"/>
                                                            Pending
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info">
                                                            <i class="fa fa-eye"/>
                                                            <t t-esc="prop.views"/>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a t-attf-href="/my/agent/property/#{prop.id}"
                                                           class="btn btn-sm btn-outline-primary">
                                                            <i class="fa fa-eye"/>
                                                            View
                                                        </a>
                                                    </td>
                                                    <!-- In the recent properties table, you can add a status column -->
                                                    <td>
                                                        <span t-if="prop.status == 'available'"
                                                              class="badge bg-primary">
                                                            <i class="fa fa-check-circle"/>
                                                            Available
                                                        </span>
                                                        <span t-elif="prop.status == 'sold'" class="badge bg-danger">
                                                            <i class="fa fa-tag"/>
                                                            Sold
                                                        </span>
                                                        <span t-elif="prop.status == 'rented'" class="badge bg-info">
                                                            <i class="fa fa-key"/>
                                                            Rented
                                                        </span>
                                                    </td>

                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>

                                <div t-if="properties" class="mt-3 text-center">
                                    <a href="/my/agent/properties" class="btn btn-outline-primary">
                                        View All Properties
                                        <i class="fa fa-arrow-right"/>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
