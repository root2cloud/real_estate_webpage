<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Agent Registration Rejection Wizard Form View -->
    <record id="view_agent_registration_reject_wizard_form" model="ir.ui.view">
        <field name="name">agent.registration.reject.wizard.form</field>
        <field name="model">agent.registration.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Agent Registration">
                <sheet>
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning:</strong> You are about to reject this agent registration.
                        This action will be recorded in the system.
                    </div>

                    <group>
                        <field name="registration_id" invisible="1"/>
                    </group>

                    <group string="Rejection Details">
                        <field name="rejection_reason"
                               placeholder="Enter the reason for rejection (minimum 20 characters)"
                               widget="text"
                               nolabel="1"
                               required="1"/>
                    </group>

                    <div class="text-muted">
                        <small>
                            <i class="fa fa-info-circle"></i>
                            The rejection reason will be visible to administrators and recorded in the registration history.
                        </small>
                    </div>
                </sheet>
                <footer>
                    <button string="âœ— Confirm Rejection"
                            name="action_confirm_reject"
                            type="object"
                            class="btn-danger"
                            confirm="Are you sure you want to reject this registration?"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
